<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".DangKyActivity">

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        android:layout_margin="5dp"
        android:background="@null"
        android:scaleType="center"
        android:contentDescription="quay lại trang chủ">
    </ImageButton>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_marginBottom="64dp"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng ký "
                android:textSize="25sp"
                android:layout_marginTop="50dp"
                android:textStyle="bold"
                android:layout_gravity="center">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bạn đã có tài khoản?">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2196F3"
                    android:id="@+id/tvDangNhap"
                    android:layout_marginLeft="5dp"
                    android:text="Đăng nhập">

                </TextView>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:padding="10dp"
                    android:hint="Họ tên"
                    android:id="@+id/edtHoTen"
                    android:inputType="textPersonName">
                </EditText>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Số điện thoại"
                    android:id="@+id/edtSDT"
                    android:background="@null"
                    android:padding="10dp"
                    android:inputType="phone">
                </EditText>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Email"
                    android:id="@+id/edtEmail"
                    android:background="@null"
                    android:padding="10dp"
                    android:inputType="textEmailAddress">
                </EditText>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Địa chỉ chi tiết"
                    android:id="@+id/edtDiaChi"
                    android:background="@null"
                    android:padding="10dp"
                    android:inputType="text">
                </EditText>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Tỉnh/Thành phố"
                    android:id="@+id/edtTinh"
                    android:background="@null"
                    android:padding="10dp"
                    android:inputType="text">
                </EditText>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Quận/Huyện"
                    android:id="@+id/edtQuanHuyen"
                    android:background="@null"
                    android:padding="10dp"
                    android:inputType="text">
                </EditText>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Phường/Xã"
                    android:id="@+id/edtPhuongXa"
                    android:background="@null"
                    android:padding="10dp"
                    android:inputType="text">
                </EditText>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Mật khẩu"
                    android:id="@+id/edtMatKhau"
                    android:background="@null"
                    android:padding="10dp"
                    android:inputType="textPassword">
                </EditText>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Nhập lại mật khẩu"
                    android:id="@+id/edtNhapLaiMatKhau"
                    android:background="@null"
                    android:padding="10dp"
                    android:inputType="textPassword">
                </EditText>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:text="Tiếp tục"
        android:id="@+id/btnTiepTuc"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:backgroundTint="@color/backgroud"
        android:layout_height="wrap_content">

    </Button>
</FrameLayout>