<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_blank_cau_hinh"
    android:layout_height="match_parent"
    tools:context=".CaNhanFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:backgroundTint="@color/backgroud"
        android:layout_height="80dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:paddingTop="18dp"
                android:id="@+id/imgBtnUser"
                android:layout_marginEnd="8dp"
                android:background="@null"
                android:src="@drawable/user" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="Hà Minh Khôi"
                android:id="@+id/tvCauHinh"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/imgBtnUser"
                android:textSize="18sp"
                android:padding="20dp">

            </TextView>
            <ImageButton
                android:id="@+id/imgBtnThongBao"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:src="@drawable/baseline_notifications_24" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="18dp"
            android:paddingLeft="10dp"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="28dp"
                android:id="@+id/imgBtnQuanLyNguoiGui"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:src="@drawable/baseline_edit_square_24"
                android:layout_height="28dp">

            </ImageButton>

            <TextView
                android:layout_width="200dp"
                android:id="@+id/tvQuanLyNguoiGui"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/imgBtnQuanLyNguoiGui"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:text="Thông tin tài khoản">

            </TextView>

            <ImageButton
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="120dp"
                android:layout_marginBottom="14dp"
                android:layout_toRightOf="@+id/tvQuanLyNguoiGui"
                android:background="@null"
                android:src="@drawable/baseline_chevron_right_24">

            </ImageButton>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="18dp"
            android:paddingLeft="10dp"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="28dp"
                android:id="@+id/imgBtnQuanLyNguoiNhan"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:src="@drawable/baseline_edit_square_24"
                android:layout_height="28dp">

            </ImageButton>

            <TextView
                android:layout_width="200dp"
                android:id="@+id/tvQuanLyNguoiNhan"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/imgBtnQuanLyNguoiNhan"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:text="Đổi mật khẩu">

            </TextView>

            <ImageButton
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="120dp"
                android:layout_marginBottom="14dp"
                android:layout_toRightOf="@+id/tvQuanLyNguoiNhan"
                android:background="@null"
                android:src="@drawable/baseline_chevron_right_24">

            </ImageButton>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="18dp"
            android:paddingLeft="10dp"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="28dp"
                android:id="@+id/imgBtnQuanLyHangHoa"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:src="@drawable/baseline_edit_square_24"
                android:layout_height="28dp">

            </ImageButton>

            <TextView
                android:layout_width="200dp"
                android:id="@+id/tvQuanLyHangHoa"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/imgBtnQuanLyHangHoa"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:text="Thiết lập in">

            </TextView>

            <ImageButton
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="120dp"
                android:layout_marginBottom="14dp"
                android:layout_toRightOf="@+id/tvQuanLyHangHoa"
                android:background="@null"
                android:src="@drawable/baseline_chevron_right_24">

            </ImageButton>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="18dp"
            android:paddingLeft="10dp"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="28dp"
                android:id="@+id/imgBtnQuanLyTaiKhoanLenDonHo"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:src="@drawable/baseline_edit_square_24"
                android:layout_height="28dp">

            </ImageButton>

            <TextView
                android:layout_width="250dp"
                android:id="@+id/tvQuanLyTaiKhoanLenDonHo"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/imgBtnQuanLyTaiKhoanLenDonHo"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:text="Cấu hình thông báo">

            </TextView>

            <ImageButton
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="70dp"
                android:layout_marginBottom="14dp"
                android:layout_toRightOf="@+id/tvQuanLyTaiKhoanLenDonHo"
                android:background="@null"
                android:src="@drawable/baseline_chevron_right_24">

            </ImageButton>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="18dp"
            android:paddingLeft="10dp"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="28dp"
                android:id="@+id/imgBtnCaiDat"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:src="@drawable/baseline_edit_square_24"
                android:layout_height="28dp">

            </ImageButton>

            <TextView
                android:layout_width="200dp"
                android:id="@+id/tvCaiDatHienThiDonHang"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/imgBtnCaiDat"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:text="Mời sử dụng dịch vụ">

            </TextView>

            <ImageButton
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="120dp"
                android:layout_marginBottom="14dp"
                android:layout_toRightOf="@+id/tvCaiDatHienThiDonHang"
                android:background="@null"
                android:src="@drawable/baseline_chevron_right_24">

            </ImageButton>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Version 1.0.35">

    </TextView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Đăng xuất">

    </Button>
</LinearLayout>